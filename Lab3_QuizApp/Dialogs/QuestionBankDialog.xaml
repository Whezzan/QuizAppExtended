<Window x:Class="QuizAppExtended.Dialogs.QuestionBankDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:QuizAppExtended.ViewModels"
        xmlns:models="clr-namespace:QuizAppExtended.Models"
        Title="Question Bank"
        Height="420" Width="520"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Background}"
        Foreground="{DynamicResource Brush.Text.Primary}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Questions in bank (grouped by category):"
                   FontWeight="Bold"/>

        <TreeView Grid.Row="1"
                  Margin="0,8,0,0"
                  ItemsSource="{Binding QuestionBankTreeItems}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type viewModels:QuestionBankCategoryNode}"
                                          ItemsSource="{Binding Questions}">
                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type models:Question}">
                    <TextBlock Text="{Binding Query}" TextWrapping="Wrap"/>
                </DataTemplate>
            </TreeView.Resources>

            <TreeView.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding AddQuestionFromBankCommand}"/>
            </TreeView.InputBindings>
        </TreeView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="90"
                    Margin="0,0,8,0"
                    Content="Add"
                    Command="{Binding AddQuestionFromBankCommand}"/>
            <Button Width="90" Content="Close" IsDefault="True" Command="{Binding CloseDialogCommand}"/>
        </StackPanel>
    </Grid>
</Window>
