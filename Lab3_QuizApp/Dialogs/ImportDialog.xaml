<Window x:Class="Lab3_QuizApp.Views.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Questions" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Number of Questions:"/>
        <TextBox Name="AmountTextBox" Text="10" Margin="0,0,0,10"/>

        <TextBlock Text="Category:"/>
        <ComboBox Name="CategoryComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Any" Tag=""/>
            <ComboBoxItem Content="General Knowledge" Tag="9"/>
            <ComboBoxItem Content="Books" Tag="10"/>
            <ComboBoxItem Content="Film" Tag="11"/>
            <ComboBoxItem Content="Music" Tag="12"/>
            <ComboBoxItem Content="Video Games" Tag="15"/>
            <ComboBoxItem Content="Science &amp; Nature" Tag="17"/>
            <ComboBoxItem Content="Sports" Tag="21"/>
            <ComboBoxItem Content="Geography" Tag="22"/>
            <ComboBoxItem Content="History" Tag="23"/>
            <ComboBoxItem Content="Politics" Tag="24"/>
            <ComboBoxItem Content="Art" Tag="25"/>
        </ComboBox>

        <TextBlock Text="Difficulty:"/>
        <ComboBox Name="DifficultyComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Any" Tag=""/>
            <ComboBoxItem Content="Easy" Tag="easy"/>
            <ComboBoxItem Content="Medium" Tag="medium"/>
            <ComboBoxItem Content="Hard" Tag="hard"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>