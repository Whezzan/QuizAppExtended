<Window x:Class="QuizAppExtended.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizAppExtended.Dialogs" 
        xmlns:converters="clr-namespace:QuizAppExtended.Converters"
        mc:Ignorable="d"
        Title="Pack Options"
        Height="390" Width="180"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Background}"
        Foreground="{DynamicResource Brush.Text.Primary}">

    <Window.Resources>
        <converters:IntToDifficultyConverter x:Key="DifficultyConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Pack Name"
               FontWeight="Bold"
               Grid.Row="0"
               Margin="5 5 0 5"/>
        <TextBox Grid.Row="0"
                 Height="32"
                 Margin="10 15 10 0"
                 Text="{Binding EditablePack.Name, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Category"
               FontWeight="Bold"
               Grid.Row="1"
               Margin="5 0 5 0"/>
        <ComboBox Grid.Row="1"
                  Height="32"
                  Margin="10 10 10 0"
                  ItemsSource="{Binding Categories}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding EditablePack.CategoryId, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Difficulty"
               FontWeight="Bold"
               Grid.Row="2"
               Margin="5 0 5 0"/>
        <ComboBox Grid.Row="2"
                  Height="32"
                  Margin="10 10 10 0"
                  SelectedIndex="{Binding EditablePack.Difficulty, Converter={StaticResource DifficultyConverter}}">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Hard"/>
        </ComboBox>

        <Label Content="Time Limit"
               FontWeight="Bold"
               Grid.Row="3"
               Margin="5 0 5 0"/>
        <Label Content="{Binding ElementName=sldr_TimeLimit, Path=Value}"
               Grid.Row="3"
               HorizontalAlignment="Center"
               Margin="35 0 0 0"/>
        <Label Content="seconds"
               Grid.Row="3"
               HorizontalAlignment="Right"
               Margin="5 0 5 0"/>
        <Slider x:Name="sldr_TimeLimit"
                Grid.Row="3"
                Margin="10 25 10 5"
                Maximum="120"
                Minimum="5"
                IsSnapToTickEnabled="True"
                TickFrequency="5"
                TickPlacement="BottomRight"
                Value="{Binding EditablePack.TimeLimitInSeconds, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10 10 10 10">
            <Button Content="Cancel"
                    Width="70"
                    Margin="0 0 10 0"
                    IsCancel="True"
                    Command="{Binding CancelPackOptionsCommand}"/>
            <Button Content="OK"
                    Width="70"
                    IsDefault="True"
                    Command="{Binding SavePackOptionsCommand}"/>
        </StackPanel>
    </Grid>

</Window>
