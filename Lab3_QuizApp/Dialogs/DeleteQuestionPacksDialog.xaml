<Window x:Class="QuizAppExtended.Dialogs.DeleteQuestionPacksDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Question Packs"
        Height="360" Width="320"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Background.Gradient}"
        Foreground="{DynamicResource Brush.Text.Primary}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select question packs to delete:" FontWeight="Bold"/>

        <ListBox x:Name="PacksListBox"
                 Grid.Row="1"
                 Margin="0,8,0,0"
                 SelectionMode="Extended"
                 DisplayMemberPath="Name"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Width="80" Margin="0,0,8,0" Content="Cancel" Click="Cancel_Click"/>
            <Button Width="80" Content="Delete" IsDefault="True" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
