<UserControl x:Class="QuizAppExtended.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:QuizAppExtended.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent"
             DataContext="{Binding ConfigurationViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Brush.Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row ="0" 
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="{Binding ActivePack.Name}"
                   FontWeight="Bold" 
                   Grid.Column="0" 
                   Grid.Row="0" 
                   Margin="5 0 0 0"
                   VerticalAlignment="Bottom"/>

            <!-- New: QuestionBank button next to pack name -->
            <Button Grid.Column="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding DataContext.OpenQuestionBankCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    Height="20"
                    Margin="150 0 0 0"
                    ToolTip="Open Question Bank for this pack category"
                    VerticalAlignment="Center"
                    Width="20">
                <Button.Content>
                    <fa:IconBlock Icon="Database"/>
                </Button.Content>
            </Button>

            <StackPanel Grid.Column="2" 
                        Grid.Row="0"
                        HorizontalAlignment="Right" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Bottom">

                <Button Background="Transparent" 
                        BorderBrush="Transparent"
                        Command ="{Binding EditPackOptionsCommand}"
                        Height="20" 
                        Margin="3"
                        Width="20">
                    <Button.Content>
                        <fa:IconBlock Icon="Sliders"/>
                    </Button.Content>
                </Button>

                <Button Background="Transparent" 
                        BorderBrush="Transparent"
                        Command="{Binding AddQuestionCommand}"
                        Height="20" 
                        Margin="3"
                        Width="20">
                    <Button.Content>
                        <fa:IconBlock Icon="Plus"/>
                    </Button.Content>
                </Button>

                <Button Background="Transparent" 
                        BorderBrush="Transparent"
                        Command="{Binding DeleteQuestionCommand}"
                        Height="20" 
                        IsEnabled="{Binding DeleteQuestionIsEnable, UpdateSourceTrigger=PropertyChanged}"
                        Margin="3 3 10 3"
                        Visibility="Visible"
                        Width="20">
                    <Button.Content>
                        <fa:IconBlock Icon="Minus"/>
                    </Button.Content>
                </Button>

            </StackPanel>
        </Grid>

        <ListBox Grid.Column="0" 
                 Grid.Row="1" 
                 Grid.RowSpan="2" 
                 ItemsSource="{Binding ActivePack.Questions}" 
                 Margin="10,0,10,10"
                 SelectedItem="{Binding SelectedQuestion, UpdateSourceTrigger=PropertyChanged}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Save to Question Bank"
                              Command="{Binding SaveQuestionToBankCommand}" />
                </ContextMenu>
            </ListBox.ContextMenu>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Question" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Query}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Column="1" 
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Questions" 
                   FontWeight="Bold"
                   Grid.Column="1" 
                   Grid.Row="0"
                   Margin="15 -10 20 0"
                   Visibility="{Binding TextVisibility, Converter={StaticResource VisibilityConverter}}"/>

            <TextBox Grid.Column="1" 
                     Grid.Row="1"
                     Margin="20 0" 
                     Padding="5"
                     Text="{Binding SelectedQuestion.Query, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     Visibility="{Binding TextVisibility, Converter={StaticResource VisibilityConverter}}"
                     TextChanged="OnQuestionFieldChanged"/>
        </Grid>

        <StackPanel x:Name="spAnswers"
                    Grid.Column="1" 
                    Grid.Row="2" 
                    Margin="20,0,20,0"
                    Visibility="{Binding TextVisibility, Converter={StaticResource VisibilityConverter}}">

            <Label Content="Correct Answer" 
                   FontWeight="Bold" 
                   Margin="-5 30 0 0"/>
            <TextBox Text="{Binding SelectedQuestion.CorrectAnswer, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     TextChanged="OnQuestionFieldChanged"/>

            <Label Content="First Incorrect Answer" 
                   FontWeight="Bold" 
                   Margin="-5 0 0 0"/>
            <TextBox Text="{Binding SelectedQuestion.IncorrectAnswers[0], UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     TextChanged="OnQuestionFieldChanged"/>

            <Label Content="Second Incorrect Answer" 
                   FontWeight="Bold" 
                   Margin="-5 0 0 0"/>
            <TextBox Text="{Binding SelectedQuestion.IncorrectAnswers[1], UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     TextChanged="OnQuestionFieldChanged"/>

            <Label Content="Third Incorrect Answer" 
                   FontWeight="Bold" 
                   Margin="-5 0 0 0"/>
            <TextBox Text="{Binding SelectedQuestion.IncorrectAnswers[2], UpdateSourceTrigger=PropertyChanged}"
                     Padding="2"
                     TextChanged="OnQuestionFieldChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="2"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Margin="10,0,10,10">
            <Label Content="Category"
                   FontSize="9"
                   FontWeight="Bold"
                   Margin="0 0 0 5"/>

            <ComboBox ItemsSource="{Binding Categories}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedQuestion.CategoryId, UpdateSourceTrigger=PropertyChanged}"
                      Margin="0 0 0 10"
                      Padding="2"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"/>

            <!-- Put label + icon button on the same row -->
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Content="Save Question"
                       FontSize="9"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0"/>

                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding SaveQuestionToBankCommand}"
                        Height="32"
                        Width="32"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Right"
                        ToolTip="Save selected question to Question Bank">
                    <Button.Content>
                        <fa:IconBlock Icon="FloppyDisk"/>
                    </Button.Content>
                </Button>
            </Grid>

            <!-- NEW: big PLAY button at the bottom of column 3 -->
            <Button Margin="0,16,0,0"
                    VerticalAlignment="Bottom"
                    Height="54"
                    Background="#FF22C55E"
                    BorderBrush="#FF16A34A"
                    FontWeight="Bold"
                    FontSize="18"
                    Click="OnPlayClick">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <fa:IconBlock Icon="Play" Width="18" Height="18" Margin="0,0,8,0"/>
                    <TextBlock Text="PLAY"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>

</UserControl>