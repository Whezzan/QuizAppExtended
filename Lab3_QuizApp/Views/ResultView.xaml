<UserControl x:Class="QuizAppExtended.Views.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:QuizAppExtended.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             Background="MintCream"
             DataContext="{Binding PlayerViewModel}">

    <Grid Background="{DynamicResource Brush.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Complete + results + restart (all above Top 5) -->
        <StackPanel Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10">

            <TextBlock Text="Complete!"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <TextBlock Text="{Binding Results}"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"/>

            <Button Background="White"
                    Command="{Binding SwitchToPlayModeCommand}"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Padding="20 5">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="ArrowRotateRight" Margin="10 0"/>
                        <TextBlock Text="Restart!"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>

        <!-- Top 5 -->
        <Grid Grid.Column="1" Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Top 5 (this pack)"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

            <ItemsControl Grid.Row="1" ItemsSource="{Binding Top5Sessions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0,2">
                            <TextBlock DockPanel.Dock="Left" Width="220" Text="{Binding PlayerName}"/>
                            <TextBlock DockPanel.Dock="Left" Width="120" Text="{Binding CorrectCount, StringFormat=Correct: {0}}"/>
                            <TextBlock DockPanel.Dock="Left" Width="120" Text="{Binding TotalTimeSeconds, StringFormat=Time: {0}s}"/>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

    </Grid>

</UserControl>
