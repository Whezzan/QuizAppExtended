<UserControl x:Class="Lab3_QuizApp.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Lab3_QuizApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="MintCream"
             DataContext="{Binding PlayerViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding TimeLimit}"
                   Grid.Column="2"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
        </TextBlock>

        <TextBlock Text="{Binding CurrentQuestion}"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">
        </TextBlock>
        <TextBlock Text="{Binding QuestionStatus}"
                   FontSize="18"
                   Grid.Column="1"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">
        </TextBlock>

        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Background="White"
                    Command="{Binding CheckPlayerAnswerCommand}"
                    CommandParameter="0"                    
                    FontSize="14"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="10,10,10,10">
                <TextBlock Text="{Binding ShuffledAnswers[0]}"
                           TextWrapping="Wrap"
                           Padding="10"/>
            </Button>

            <Label FontSize="36"
                   Grid.Column="0"
                   Grid.Row="0"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CheckmarkVisibilities[0], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="Check" Foreground="ForestGreen"/>
                </Label.Content>
            </Label>

            <Label FontSize="36"
                   Grid.Column="0"
                   Grid.Row="0"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CrossVisibilities[0], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="XMark" Foreground="Red"/>
                </Label.Content>
            </Label>

            <Button Background="White"
                    Command="{Binding CheckPlayerAnswerCommand}"
                    CommandParameter="1"
                    FontSize="14"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="10,10,10,10">
                <TextBlock Text="{Binding ShuffledAnswers[1]}"
                           TextWrapping="Wrap"
                           Padding="10"/>
            </Button>

            <Label FontSize="36"
                   Grid.Column="1"
                   Grid.Row="0"
                   HorizontalAlignment="Right" 
                   Visibility="{Binding CheckmarkVisibilities[1], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="Check" Foreground="ForestGreen"/>
                </Label.Content>
            </Label>

            <Label FontSize="36"
                   Grid.Column="1"
                   Grid.Row="0"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CrossVisibilities[1], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="XMark" Foreground="Red"/>
                </Label.Content>
            </Label>

            <Button Background="White"
                    Command="{Binding CheckPlayerAnswerCommand}"
                    CommandParameter="2"
                    FontSize="14"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="10,10,10,10">
                <TextBlock Text="{Binding ShuffledAnswers[2]}"
                           TextWrapping="Wrap"
                           Padding="10"/>
            </Button>

            <Label x:Name="CheckC" 
                   FontSize="36"
                   Grid.Column="0"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CheckmarkVisibilities[2], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="Check" Foreground="ForestGreen"/>
                </Label.Content>
            </Label>

            <Label FontSize="36"
                   Grid.Column="0"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CrossVisibilities[2], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="XMark" Foreground="Red"/>
                </Label.Content>
            </Label>

            <Button Background="White"
                    Command="{Binding CheckPlayerAnswerCommand}"
                    CommandParameter="3"
                    FontSize="14"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="10,10,10,10">
                <TextBlock Text="{Binding ShuffledAnswers[3]}"
                           TextWrapping="Wrap"
                           Padding="10"/>
            </Button>

            <Label FontSize="36"
                   Grid.Column="1"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CheckmarkVisibilities[3], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="Check" Foreground="ForestGreen"/>
                </Label.Content>
            </Label>

            <Label FontSize="36"
                   Grid.Column="1"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Visibility="{Binding CrossVisibilities[3], Converter={StaticResource VisibilityConverter}}">
                <Label.Content>
                    <fa:IconBlock Icon ="XMark" Foreground="Red"/>
                </Label.Content>
            </Label>
        </Grid>

    </Grid>

</UserControl>
