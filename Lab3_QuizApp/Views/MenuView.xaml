<UserControl x:Class="QuizAppExtended.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:QuizAppExtended.Views"
             mc:Ignorable="d" 
             Height="auto" Width="auto" MinWidth="800">

    <Menu>
        <MenuItem Header="File">
            <MenuItem Command="{Binding OpenDialogCommand}"
                      Header="New Question Pack">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="FolderPlus" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Header="Select Question Pack">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="FolderOpen" Width="14" Height="14"/>
                </MenuItem.Icon>

                <MenuItem.ItemsSource>
                    <Binding Path="Packs"/>
                </MenuItem.ItemsSource>

                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding Name}" />
                        <Setter Property="Command" Value="{Binding DataContext.SelectActivePackCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                        <Setter Property="CommandParameter" Value="{Binding}" />
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>

            <MenuItem Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.DeletePackCommand}"
                      Header="Delete Question Pack"
                      IsEnabled="{Binding DeletePackIsEnable, UpdateSourceTrigger=PropertyChanged}">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="FolderMinus" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>

            <MenuItem Header="Import Questions"
                      Command="{Binding OpenImportQuestionsCommand}"
                      InputGestureText="Ctrl+I">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="CloudArrowDown" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>

            <MenuItem Command="{Binding ExitGameCommand}"
                      Header="Exit"
                      InputGestureText="Alt+F4">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="DoorOpen" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>

        <MenuItem Header="Edit">
            <MenuItem Command="{Binding ConfigurationViewModel.AddQuestionCommand}"
                      Header="Add Questions"
                      InputGestureText="Insert">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Plus" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding ConfigurationViewModel.DeleteQuestionCommand}"
                      Header="Delete Questions"
                      InputGestureText="Delete">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Minus" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding AddCategoryCommand}"
                      Header="Add Category">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Plus" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding DeleteCategoryCommand}"
                      Header="Delete Category">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Minus" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding ConfigurationViewModel.EditPackOptionsCommand}"
                      Header="Pack Options"
                      InputGestureText="Ctrl+O">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Sliders" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>

        <MenuItem Header="View">
            <MenuItem Header="Play"
                      InputGestureText="Ctrl+P"
                      Click="OnPlayClick">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Play" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem Command="{Binding ConfigurationViewModel.SwitchToConfigurationModeCommand}"
                      Header="Edit"
                      InputGestureText="Ctrl+E">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Gears" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>

            <MenuItem Command="{Binding ToggleWindowFullScreenCommand}"
                      Header="Fullscreen"
                      InputGestureText="Alt+Enter">
                <MenuItem.Icon>
                    <fa:IconBlock Icon="Expand" Width="14" Height="14"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
    </Menu>

</UserControl>